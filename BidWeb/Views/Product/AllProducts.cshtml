@model List<Products>

@if (Model == null)
{
    <div class="loader"></div>
}
else
{

    <h1>All Products</h1>

    
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {

                    <div class="col-lg-4 mb-5 d-flex justify-content-center">
                        <div class="card shadow" style="width: 18rem;">

                            <img class="card-img-top" style="height:200px;" src="@Url.Content("~/"+item.ImageUrl)" alt="@item.ProductName" />

                            <div class="card-body col text-center">
                                <h5 class="card-title">@item.ProductName</h5>

                                <p class="card-text">@item.BasePrice.ToString("C0")</p>
                                <p class="card-text">Remaining days @item.RemainingDays</p>
                                <div>
                                    @if(item.IsSold)
                                    {
                                    <button type="button" class="btn btn-success" disabled>Place Bid</button>
                                    }
                                    else
                                    {
                                    <a asp-action="GetCurrentValue" asp-controller="Bid" asp-route-productid="@item.Id" asp-route-baseprice="@item.BasePrice" asp-route-productname="@item.ProductName" class="btn btn-success">Place Bid</a>
                                    <a asp-action="ProductDetails" asp-controller="Products" asp-route-productid="@item.Id" class="btn btn-secondary">View Details</a>
                                    }
                                </div>
                                <br />
                                <br />

                            </div>
                        </div>
                    </div>

                }

            </div>


        </div>
   



